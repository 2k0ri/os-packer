{
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Linux_64",
            "iso_url": "https://github.com/rancherio/os/releases/download/v0.1.2/rancheros.iso",
            "iso_checksum": "a9d7a58eb589058072f396dbb9c69710",
            "iso_checksum_type": "md5",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1024"]
            ],
            "boot_wait": "15s",
            "ssh_username": "rancher",
            "ssh_password": "rancher",
            "ssh_wait_timeout": "60s",
            "guest_additions_mode": "disable"
        }
    ],
    "provisioners": [
        {
            "type":"shell",
            "script": "./scripts/install2disk",
            "only": ["virtualbox-iso"]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "./vagrant/x86_64/prod/rancheros_v0.1.2_{{.Provider}}.box"
        }
    ]
}
