{
    "variables": {
        "version": "{{env `RANCHEROS_VERSION`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-west-1",
            "ami_regions": [
                "us-west-1",
                "us-west-2",
                "us-east-1",
                "eu-west-1",
                "ap-northeast-1",
                "sa-east-1",
                "ap-southeast-1",
                "ap-southeast-2"
            ],
            "source_ami": "ami-0757b143",
            "instance_type": "m3.medium",
            "ssh_username": "rancher",
            "ami_name": "rancheros-{{user `version`}}-{{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "../scripts/install2disk"
        }
    ]
}
