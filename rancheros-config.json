{
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Linux_64",
            "iso_url": "./rancheros.iso",
            "iso_checksum": "3b28a76a8c76fcb71a424b58e0e07374",
            "iso_checksum_type": "md5",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1024"]
            ],
            "boot_wait": "15s",
            "ssh_username": "rancher",
            "ssh_password": "rancher",
            "ssh_wait_timeout": "60s",
            "guest_additions_mode": "disable"
        }
    ],
    "provisioners": [
        {
            "type":"shell",
            "script": "./scripts/install2disk",
            "only": ["virtualbox-iso"]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "rancheros_vagrant_{{.BuildName}}_{{.Provider}}.box"
        }
    ]
}
