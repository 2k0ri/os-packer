{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-west-1",
            "source_ami": "ami-709d8635",
            "instance_type": "t1.micro",
            "ssh_username": "ubuntu",
            "ami_name": "packer-based-rancher-os-builder {{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "dist/rancheros-0.1.1.tar.gz",
            "destination": "/home/ubuntu/rancheros-0.1.1.tar.gz"
        },
        {
            "type": "shell",
            "inline": [
                "cd /home/ubuntu",
                "tar -zxvf rancheros-0.1.1.tar.gz",
                "sudo cp artifacts/initrd /boot/initrd-0.1.1-rancheros",
                "sudo cp artifacts/vmlinuz /boot/vmlinuz-0.1.1-rancheros"
            ]
        },
        {
            "type": "shell",
            "script": "scripts/create_grub_menu",
            "execute_command": "sudo {{ .Path }}"
        }
    ]
}
